{
    "manifest_version": 2,
    "name": "Ayush",
    "version": "1.0",
    "description": "Your security is our purpose",
    "permissions": [
        "tabs",
        "storage",
        "history",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "images/icon16x16.png",
            "48": "images/icon48x48.png",
            "128": "images/icon128x128.png"
        }
    },
    "icons": {
        "16": "images/icon16x16.png",
        "48": "images/icon48x48.png",
        "128": "images/icon128x128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*"], 
            "js" : ["api.js"]
        } 
    ]
}
