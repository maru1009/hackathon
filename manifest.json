{
    "manifest_version": 2,
    "name": "Ayush",
    "version": "1.0",
    "description": "Your safety is our purpose.",
    "permissions": [
        "activeTab", 
        "scripting", 
        "https://www.virustotal.com/*"  
    ],
    "background": {
        "scripts": ["api.js", "background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "images/icon16x16.png",
            "48": "images/icon48x48.png",
            "128": "images/icon128x128.png"
        },
    "icons": {
        "16": "images/icon16x16.png",
        "48": "images/icon48x48.png",
        "128": "images/icon128x128.png"
    },
    "page_action": {
        "default_popup": "index.html"
    },
    "user_scripts": {
        "api_script": "api.js"
      }
    }
}
